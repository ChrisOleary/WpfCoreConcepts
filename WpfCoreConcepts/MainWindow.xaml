<Window 
    x:Name="MyWindow"
    x:Class="WpfCoreConcepts.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCoreConcepts"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0,0" StartPoint="0.1,1">
                <GradientStop Color="#86C2D9" Offset="0"/>
                <GradientStop Color="#EB8A3D" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Viewbox>
            <TextBlock Foreground="Wheat" Text="{Binding ElementName=MyWindow, Path=Counter}"></TextBlock>
        </Viewbox>
    </Grid>
</Window>
